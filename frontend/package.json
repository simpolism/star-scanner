{
  "name": "astro-event-finder-frontend",
  "version": "1.0.0",
  "type": "module",
  "description": "Frontend for astrological events viewer",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "lint": "eslint --ext .ts,.svelte src",
    "lint:fix": "eslint --ext .ts,.svelte src --fix",
    "format": "prettier --config .prettierrc --write src/**/*.{ts,svelte}",
    "postbuild": "npm run copy-assets",
    "copy-assets": "copyfiles -u 1 public/assets/**/* dist/"
  },
  "dependencies": {
    "svelte": "^4.2.3"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "@tsconfig/svelte": "^5.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.52.0",
    "eslint-plugin-svelte": "^2.32.4",
    "prettier": "^3.0.0",
    "prettier-plugin-svelte": "^3.0.0",
    "svelte-check": "^3.5.2",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2",
    "vite": "^5.0.0"
  }
}
